# -*- Mode: sh; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
# ~/etc/bash/rc/history
#
# control history capturing

export   HISTCONTROL=ignorespace:erasedups
export  HISTFILESIZE=10000
export      HISTFILE="${HOME}/var/bash_history"

alias    h='history 20'
alias   hg='history | egrep'

shopt -s histappend
