# -*- Mode: sh; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
# ~/etc/bash/rc/less
#
# use less in preference to more

export  PAGER='less'

export  LESSHISTFILE="${HOME}/var/less_history"

# add colour highlighting where possible

export  LESS='-R'

# Prefer Debian/Ubuntu's lesspipe, if it's installed.  Otherwise, fall
# back on the copy we've include in $HOME/bin.

if have_program lesspipe; then
    export  LESSOPEN='| lesspipe %s'
else
    export  LESSOPEN='| $HOME/bin/lesspipe %s'
fi

need pygmentize <<end
    export LESSCOLORIZER='less-pygmentize';
end
