# -*- Mode: sh; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
# ~/etc/bash/early/need
#
# perform actions if a needed program is in the $PATH, 
# echoing a warning if it doesn't exist

need () {
    local file=${1}
    local have_it=0

    type $1 &> /dev/null    && have_it=1

    if [ 0 = ${have_it} ]; then
        eecho "${bold}${red}${file} is not installed${reset}"
    else
        # perform what was passed as stdin (BEWARE: this is not quite normal
        # bash syntax, so semi-colons are almost certainly required)
        eval `cat`
    fi

    return ${have_it}
}

have_program () {
    local file=${1}
    local have_it=0

    type $1 &> /dev/null    && have_it=1

    return ${have_it}
}
