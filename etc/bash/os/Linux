# -*- Mode: sh; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
# ~/etc/bash/os/Linux

# Linux-specific additions

case "$TERM" in
xterm)
    TERM=xterm-256color
    ;;
*)
    ;;
esac

# Colorized ls output

eval "`dircolors -b`"
alias ls='ls --color=auto'

# Bash completion

[ -f /etc/bash_completion ] && . /etc/bash_completion
