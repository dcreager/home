# -*- Mode: sh; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
# ~/etc/bash/os/Darwin

# Mac OS X-specific additions

if [ -d `brew --prefix`/lib/python2.7 ]; then
    export PYTHONPATH=/usr/local/lib/python2.7/site-packages
    pathmunge `brew --prefix`/Cellar/python/2.7/bin
fi

if [ -d `brew --prefix`/Cellar/ccache/2.4/libexec ]; then
    pathmunge `brew --prefix`/Cellar/ccache/2.4/libexec
fi

if [ -f `brew --prefix`/etc/bash_completion ]; then
    . `brew --prefix`/etc/bash_completion
fi

if [ -d /usr/texbin ]; then
    pathmunge /usr/texbin after
fi

export HOMEBREW_USE_LLVM=1
export LANG=en_US.UTF-8

# Go support

export GOROOT=`brew --cellar`/go/HEAD
export GOBIN=/usr/local/bin
export GOARCH=amd64
export GOOS=darwin

# Colorized ls output

alias ls='ls -G'
