set hidden
map <silent> <C-n> :noh<CR>
set hls is ic scs
nmap _ :ls<CR>:b<Space>
set ts=8 sw=4 sts=4 et
nmap <C-p>l :set sw=8 sts=8 noet<CR>
nmap <C-p>n :set sw=4 sts=4 et<CR>
set formatoptions+=n2
set tw=72

let macvim_hig_shift_movement = 0

au FileType c       set formatoptions-=t
au FileType css     set sw=4 sts=4
au FileType html    set sw=2 sts=2
au FileType lua     set formatoptions-=t sw=3 sts=3
au FileType python  set formatoptions-=t

au BufRead,BufNewFile PKGBUILD    set ft=sh
