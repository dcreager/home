# The configuration options listed as "DYNAMIC" are set dynamically by
# the bash startup scripts.  (Specifically, in ~/etc/bash/rc/git)

[user]
        name = Douglas Creager
        email = ${default_git_email}                    # DYNAMIC
[color]
        branch = true
        diff = true
        status = true
[core]
        excludesfile = $HOME/.gitignore.global          # DYNAMIC
        pager = less -FRSX
[merge]
        summary = true
[push]
        default = matching
[alias]
        st = status
        co = checkout
        di = diff
        dc = diff --cached
        lg = log --graph --pretty=oneline --abbrev-commit
        cp = cherry-pick
